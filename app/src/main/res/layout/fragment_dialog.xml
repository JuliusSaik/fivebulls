<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/chartactivity_square"
    android:paddingBottom="22dp"
    android:paddingHorizontal="32dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".WACCFragment">


    <TextView
        android:id="@+id/waccformulatxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:background="@drawable/chartactivity_square2"
        android:fontFamily="@font/sfpro_regular"
        android:padding="12dp"
        android:text="WACC  = Wd Rd(1-tax) + We Re"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wdtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:alpha="0.8"
        android:fontFamily="@font/sfpro_medium"
        android:text="Weight of debt &amp; equity (Wd &amp; We)"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/waccformulatxt" />

    <TextView
        android:id="@+id/txtmarketcap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/sfpro_medium"
        android:text="Market Cap"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wdtext" />

    <TextView
        android:id="@+id/dialogMarketCap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/sfpro_regular"
        android:text="1,200,251,251"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtmarketcap" />

    <TextView
        android:id="@+id/txtTotalDebt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/sfpro_medium"
        android:text="Total Debt"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialogMarketCap" />

    <TextView
        android:id="@+id/dialogTotalDebt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/sfpro_regular"
        android:text="1,200,251"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@id/txtTotalDebt"
        app:layout_constraintTop_toTopOf="@id/txtTotalDebt" />


    <TextView
        android:id="@+id/txtweightofD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:fontFamily="@font/sfpro_medium"
        android:text="Weight of Debt"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@id/txtTotalDebt"
        app:layout_constraintTop_toTopOf="@id/txtTotalDebt" />

    <TextView
        android:id="@+id/dialogWeightOfDebt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/sfpro_regular"
        android:text="60%"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@id/txtweightofD"
        app:layout_constraintTop_toTopOf="@id/txtweightofD" />


    <TextView
        android:id="@+id/txtSharesOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/sfpro_medium"
        android:text="Shares Out."
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialogTotalDebt" />

    <TextView
        android:id="@+id/dialogSharesOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/sfpro_regular"
        android:text="1,200,251"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@id/txtSharesOut"
        app:layout_constraintTop_toTopOf="@id/txtSharesOut" />


    <TextView
        android:id="@+id/txtWeightOfE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:fontFamily="@font/sfpro_medium"
        android:text="Weight of Equity"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@id/txtSharesOut"
        app:layout_constraintTop_toTopOf="@id/txtSharesOut" />

    <TextView
        android:id="@+id/dialogWeightOfEquity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/sfpro_regular"
        android:text="40%"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@id/txtWeightOfE"
        app:layout_constraintTop_toTopOf="@id/txtWeightOfE" />




    <ImageView
        android:id="@+id/ivDividerDialogIntrs"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_marginTop="38dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogSharesOut"
        app:srcCompat="@drawable/divider"
        app:tint="@color/chartBlue" />

    <TextView
        android:id="@+id/ReText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:alpha="0.8"
        android:fontFamily="@font/sfpro_medium"
        android:text="Cost of debt &amp; equity (Rd &amp; Re)"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivDividerDialogIntrs" />

    <TextView
        android:id="@+id/txtriskfreerate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/sfpro_medium"
        android:text="Treasury Bond Rate"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ReText" />

    <TextView
        android:id="@+id/dialogRiskFreeRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/sfpro_regular"
        android:text="2%"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtriskfreerate" />

    <TextView
        android:id="@+id/txtdebtinterest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/sfpro_medium"
        android:text="Debt Interest"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialogRiskFreeRate" />

    <TextView
        android:id="@+id/dialogInterest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/sfpro_regular"
        android:text="6%"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtdebtinterest" />

    <TextView
        android:id="@+id/txtTax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:fontFamily="@font/sfpro_medium"
        android:text="Tax Rate"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@id/txtdebtinterest"
        app:layout_constraintTop_toTopOf="@id/txtdebtinterest" />

    <TextView
        android:id="@+id/dialogTaxRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/sfpro_regular"
        android:text="19%"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@id/txtTax"
        app:layout_constraintTop_toTopOf="@id/txtTax" />


    <TextView
        android:id="@+id/txtCostOfDebt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/sfpro_medium"
        android:text="Cost of Debt"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialogInterest" />

    <TextView
        android:id="@+id/dialogCostOfDebt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/sfpro_regular"
        android:text="5%"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtCostOfDebt" />


    <TextView
        android:id="@+id/txtCostOfE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:fontFamily="@font/sfpro_medium"
        android:text="Cost of Equity"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@id/txtCostOfDebt"
        app:layout_constraintTop_toTopOf="@id/txtCostOfDebt" />

    <TextView
        android:id="@+id/dialogCostOfEquity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/sfpro_regular"
        android:text="17%"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@id/txtCostOfE"
        app:layout_constraintTop_toTopOf="@id/txtCostOfE" />



</androidx.constraintlayout.widget.ConstraintLayout>